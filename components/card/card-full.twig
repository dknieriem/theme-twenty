{% if header %}
	<div class="uk-card {{type}} {{width}} {{padding}} {{hover ? 'uk-card-hover' : ''}}">
	
	<div class="uk-card-header">
		<h3 class="uk-card-title">{{title}}</h3>
	</div>
	<div class="uk-card-body">
	    {{body}}
	</div>
</div>
{% else %}
<div class="uk-card {{type}} {{width}} {{padding}} {{hover ? 'uk-card-hover' : ''}} uk-card-body" >
	<h3 class="uk-card-title">{{title}}</h3>
    {{body}}
</div>
{% endif %}